# Seichijunrei Bot Environment Variables
# Copy this file to .env and fill in your actual values

# API Keys (REQUIRED)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
WEATHER_API_KEY=your_weather_api_key_here

# API Endpoints
ANITABI_API_URL=https://api.anitabi.cn/bangumi
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Google Cloud Configuration
# REQUIRED: Set your Google Cloud project ID
GOOGLE_CLOUD_PROJECT=your-project-id

# Authentication:
# - Local development: Uses Application Default Credentials (ADC)
#   Run: gcloud auth application-default login
# - Production: Uses Service Account (set GOOGLE_APPLICATION_CREDENTIALS)
#   Only set this in production environments:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=false
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Cache Settings
CACHE_TTL_SECONDS=3600
USE_CACHE=true

# Output Paths
OUTPUT_DIR=outputs
TEMPLATE_DIR=templates

# Rate Limiting
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD_SECONDS=60

# MCP (Model Context Protocol) - Optional
# Enable MCP toolsets for Bangumi/Anitabi tools.
ENABLE_MCP_TOOLS=false
# Transport: stdio | sse | streamable-http
MCP_TRANSPORT=stdio
# Only needed for sse / streamable-http:
MCP_BANGUMI_URL=
MCP_ANITABI_URL=
